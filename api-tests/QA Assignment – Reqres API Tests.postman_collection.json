						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Status code validation\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// Response format validation\r",
									"pm.test(\"Response is JSON\", function () {\r",
									"    pm.response.to.be.json;\r",
									"});\r",
									"\r",
									"// Mandatory fields validation\r",
									"pm.test(\"Response has mandatory fields\", function () {\r",
									"    const json = pm.response.json();\r",
									"    pm.expect(json).to.have.property(\"page\");\r",
									"    pm.expect(json).to.have.property(\"per_page\");\r",
									"    pm.expect(json).to.have.property(\"total\");\r",
									"    pm.expect(json).to.have.property(\"total_pages\");\r",
									"    pm.expect(json).to.have.property(\"data\");\r",
									"});\r",
									"\r",
									"// Data array validation\r",
									"pm.test(\"User data array is not empty\", function () {\r",
									"    const data = pm.response.json().data;\r",
									"    pm.expect(data.length).to.be.above(0);\r",
									"});\r",
									"\r",
									"// User object schema validation\r",
									"pm.test(\"User object has required fields\", function () {\r",
									"    const user = pm.response.json().data[0];\r",
									"    pm.expect(user).to.have.property(\"id\");\r",
									"    pm.expect(user).to.have.property(\"email\");\r",
									"    pm.expect(user).to.have.property(\"first_name\");\r",
									"    pm.expect(user).to.have.property(\"last_name\");\r",
									"    pm.expect(user).to.have.property(\"avatar\");\r",
									"});\r",
									"\r",
									"// Email format validation\r",
									"pm.test(\"Email format is valid\", function () {\r",
									"    const email = pm.response.json().data[0].email;\r",
									"    pm.expect(email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);\r",
									"});\r",
									"\r",
									"// Performance validation\r",
									"pm.test(\"Response time is below 2000ms\", function () {\r",
									"    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
									"});\r",
									""
								],
